<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.mattvchandler.progressbars">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/progress_bar_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/progress_bar_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Progress_bars">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Settings"
            android:label="@string/settings_title"
            android:parentActivityName=".Progress_bars"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Progress_bars"
            />
        </activity>
    </application>

</manifest>
